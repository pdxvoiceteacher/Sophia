{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "evidence_bundle_v1.schema.json",
  "title": "Evidence Bundle v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema", "bundle_id", "created_at_utc", "producer", "policy", "artifacts", "bundle_sha256"],
  "properties": {
    "schema": { "type": "string", "const": "evidence_bundle_v1" },
    "bundle_id": { "type": "string", "minLength": 1 },
    "created_at_utc": { "$ref": "#/$defs/rfc3339_utc_z" },
    "producer": {
      "type": "object",
      "additionalProperties": false,
      "required": ["node_id", "software", "version"],
      "properties": {
        "node_id": { "$ref": "#/$defs/node_id" },
        "software": { "type": "string", "minLength": 1 },
        "version": { "type": "string", "minLength": 1 }
      }
    },
    "policy": {
      "type": "object",
      "additionalProperties": false,
      "required": ["network_profile", "share_scopes", "peer_set"],
      "properties": {
        "network_profile": { "type": "string", "enum": ["witness_only", "reproducible_audit", "full_relay"] },
        "share_scopes": { "type": "array", "items": { "type": "string" } },
        "peer_set": { "type": "array", "items": { "$ref": "#/$defs/node_id" } }
      }
    },
    "artifacts": { "type": "array", "items": { "$ref": "#/$defs/artifact_entry_v1" } },
    "bundle_sha256": { "$ref": "#/$defs/sha256_hex" }
  },
  "$defs": {
    "sha256_hex": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
    "rfc3339_utc_z": { "type": "string", "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}Z$" },
    "node_id": { "type": "string", "pattern": "^node_[A-Za-z0-9_-]{8,}$" },
    "artifact_entry_v1": {
      "type": "object",
      "additionalProperties": false,
      "required": ["path", "content_type", "sha256", "size_bytes", "classification", "encrypted", "transport"],
      "properties": {
        "path": { "type": "string", "minLength": 1 },
        "content_type": { "type": "string", "minLength": 1 },
        "sha256": { "$ref": "#/$defs/sha256_hex" },
        "size_bytes": { "type": "integer", "minimum": 0 },
        "classification": { "type": "string", "enum": ["evidence", "vault", "meta", "public_metadata"] },
        "encrypted": { "type": "boolean" },
        "envelope_schema": { "type": "string", "enum": ["sealed_envelope_v1"] },
        "transport": {
          "type": "object",
          "additionalProperties": false,
          "required": ["transport_sha256", "transport_size_bytes"],
          "properties": {
            "transport_sha256": { "$ref": "#/$defs/sha256_hex" },
            "transport_size_bytes": { "type": "integer", "minimum": 0 }
          }
        }
      },
      "allOf": [
        { "if": { "properties": { "encrypted": { "const": true } }, "required": ["encrypted"] }, "then": { "required": ["envelope_schema"] } },
        { "if": { "properties": { "encrypted": { "const": false } }, "required": ["encrypted"] }, "then": { "not": { "required": ["envelope_schema"] } } }
      ]
    }
  }
}

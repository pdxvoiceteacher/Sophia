{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "frontmatter_lock_v1.schema.json",
  "title": "Front Matter Lock Report v1",
  "type": "object",
  "required": [
    "required_sentences",
    "mode",
    "findings",
    "schema",
    "decision",
    "banned_terms",
    "profile",
    "files_scanned"
  ],
  "properties": {
    "schema": {
      "type": "string",
      "const": "frontmatter_lock_report_v1"
    },
    "files_scanned": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "required_sentences": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "banned_terms": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "decision": {
      "type": "string",
      "enum": [
        "pass",
        "fail",
        "skipped"
      ]
    },
    "findings": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "severity",
          "message"
        ],
        "properties": {
          "severity": {
            "type": "string",
            "enum": [
              "info",
              "warn",
              "fail"
            ]
          },
          "file": {
            "type": "string"
          },
          "message": {
            "type": "string"
          }
        },
        "additionalProperties": true
      }
    },
    "mode": {
      "type": "string",
      "enum": [
        "enforce",
        "warn",
        "off"
      ]
    },
    "profile": {
      "type": "string",
      "enum": [
        "publication",
        "research",
        "safeguard"
      ]
    },
    "governance_hints": {
      "type": "object",
      "properties": {
        "sentinel_state_hint": {
          "type": "string",
          "enum": [
            "normal",
            "protect"
          ]
        },
        "due_process_required": {
          "type": "boolean"
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}

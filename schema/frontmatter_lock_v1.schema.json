{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "frontmatter_lock_v1.schema.json",
  "title": "Front Matter Lock Report v1",
  "type": "object",
  "required": ["schema", "files_scanned", "required_sentences", "banned_terms", "decision", "findings"],
  "properties": {
    "schema": { "type": "string", "const": "frontmatter_lock_report_v1" },
    "files_scanned": { "type": "array", "items": { "type": "string" } },
    "required_sentences": { "type": "array", "items": { "type": "string" } },
    "banned_terms": { "type": "array", "items": { "type": "string" } },
    "decision": { "type": "string", "enum": ["pass", "fail"] },
    "findings": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["severity", "message"],
        "properties": {
          "severity": { "type": "string", "enum": ["info", "warn", "fail"] },
          "file": { "type": "string" },
          "message": { "type": "string" }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}

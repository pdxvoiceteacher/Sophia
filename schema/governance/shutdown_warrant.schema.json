{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "urn:coherencelattice:schema:governance:shutdown_warrant:v1",
  "title": "Shutdown Warrant v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema",
    "warrant_id",
    "created_at_utc",
    "stakeholder_scope",
    "reason",
    "least_harm_action",
    "evidence_refs",
    "time_bounds",
    "quorum_proof",
    "appeal_route"
  ],
  "properties": {
    "schema": { "type": "string", "const": "shutdown_warrant_v1" },
    "warrant_id": { "type": "string" },
    "created_at_utc": { "type": "string", "format": "date-time" },
    "stakeholder_scope": { "type": "string" },
    "reason": { "type": "string" },
    "least_harm_action": { "type": "string" },
    "evidence_refs": {
      "type": "array",
      "items": { "type": "string" }
    },
    "time_bounds": {
      "type": "object",
      "additionalProperties": false,
      "required": ["start", "end"],
      "properties": {
        "start": { "type": "string", "format": "date-time" },
        "end": { "type": "string", "format": "date-time" }
      }
    },
    "quorum_proof": { "type": "object", "additionalProperties": true },
    "appeal_route": { "type": "string" }
  }
}

{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "network_policy_v1.schema.json",
  "title": "Network Policy v1",
  "type": "object",
  "required": [
    "schema",
    "profile",
    "share_scopes",
    "encryption",
    "peer_set",
    "relay_toggles"
  ],
  "properties": {
    "schema": { "type": "string", "const": "network_policy_v1" },
    "profile": {
      "type": "string",
      "enum": ["witness_only", "reproducible_audit", "full_relay"]
    },
    "share_scopes": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "hashes/*",
          "metrics/*",
          "attestations/*",
          "tel/*",
          "evidence/*",
          "vault/*"
        ]
      }
    },
    "encryption": {
      "type": "object",
      "required": ["alg", "key_wrap"],
      "properties": {
        "alg": { "type": "string" },
        "key_wrap": { "type": "string" }
      },
      "additionalProperties": true
    },
    "peer_set": {
      "type": "array",
      "items": { "type": "string" }
    },
    "relay_toggles": {
      "type": "object",
      "required": ["evidence_full_relay", "vault_relay"],
      "properties": {
        "evidence_full_relay": { "type": "boolean" },
        "vault_relay": { "type": "boolean" }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": true
}

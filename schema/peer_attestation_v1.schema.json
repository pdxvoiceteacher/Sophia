{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "peer_attestation_v1.schema.json",
  "title": "Peer Attestation v1",
  "type": "object",
  "required": [
    "schema",
    "node_id",
    "pubkey",
    "bundle_hash",
    "checks_run",
    "results",
    "timestamp_utc",
    "signature"
  ],
  "properties": {
    "schema": { "type": "string", "const": "peer_attestation_v1" },
    "node_id": { "type": "string" },
    "pubkey": { "type": "string" },
    "bundle_hash": { "type": "string" },
    "checks_run": { "type": "array", "items": { "type": "string" } },
    "results": {
      "type": "object",
      "additionalProperties": { "type": ["string", "number", "boolean", "null"] }
    },
    "timestamp_utc": { "type": "string" },
    "signature": { "type": "string" }
  },
  "additionalProperties": true
}

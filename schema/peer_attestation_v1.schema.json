{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "peer_attestation_v1.schema.json",
  "title": "Peer Attestation v1",
  "type": "object",
  "required": [
    "schema",
    "node_id",
    "pubkey",
    "pubkey_format",
    "bundle_hash",
    "checks_run",
    "results",
    "timestamp_utc",
    "signed_bytes_hash",
    "signature_alg",
    "signature_format",
    "signature"
  ],
  "properties": {
    "schema": {
      "type": "string",
      "const": "peer_attestation_v1"
    },
    "node_id": {
      "type": "string"
    },
    "pubkey": {
      "type": "string"
    },
    "pubkey_format": {
      "type": "string",
      "enum": ["base64", "hex"]
    },
    "bundle_hash": {
      "type": "string"
    },
    "checks_run": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "results": {
      "type": "object",
      "additionalProperties": {
        "type": [
          "string",
          "number",
          "boolean",
          "null"
        ]
      }
    },
    "timestamp_utc": {
      "type": "string"
    },
    "signed_bytes_hash": {
      "type": "string"
    },
    "signature_alg": {
      "type": "string",
      "enum": ["demo-ed25519-placeholder", "ed25519"]
    },
    "signature_format": {
      "type": "string",
      "enum": ["base64"]
    },
    "signature": {
      "type": "string"
    }
  },
  "additionalProperties": true
}

{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "sealed_envelope_v1.schema.json",
  "title": "Sealed Envelope v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema",
    "version",
    "content",
    "crypto",
    "recipients",
    "ciphertext_b64u",
    "ciphertext_sha256"
  ],
  "properties": {
    "schema": { "type": "string", "const": "sealed_envelope_v1" },
    "version": { "type": "integer", "const": 1 },
    "content": {
      "type": "object",
      "additionalProperties": false,
      "required": ["content_schema", "content_type", "plaintext_sha256", "plaintext_size_bytes"],
      "properties": {
        "content_schema": { "type": "string", "minLength": 1 },
        "content_type": { "type": "string", "minLength": 1 },
        "plaintext_sha256": { "$ref": "#/$defs/sha256_hex" },
        "plaintext_size_bytes": { "type": "integer", "minimum": 0 }
      }
    },
    "crypto": {
      "type": "object",
      "additionalProperties": false,
      "required": ["cipher", "kdf", "key_wrap", "nonce_b64u", "aad_b64u"],
      "properties": {
        "cipher": { "type": "string", "const": "AES-256-GCM" },
        "kdf": { "type": "string", "const": "HKDF-SHA256" },
        "key_wrap": { "type": "string", "const": "X25519" },
        "nonce_b64u": { "$ref": "#/$defs/base64url" },
        "aad_b64u": { "$ref": "#/$defs/base64url" }
      }
    },
    "recipients": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["recipient_kid", "recipient_alg", "wrapped_key_b64u", "wrap_info"],
        "properties": {
          "recipient_kid": { "$ref": "#/$defs/kid" },
          "recipient_alg": { "type": "string", "const": "x25519" },
          "wrapped_key_b64u": { "$ref": "#/$defs/base64url" },
          "wrap_info": {
            "type": "object",
            "additionalProperties": false,
            "required": ["ephemeral_pubkey_b64u"],
            "properties": {
              "ephemeral_pubkey_b64u": { "$ref": "#/$defs/base64url" }
            }
          }
        }
      }
    },
    "ciphertext_b64u": { "$ref": "#/$defs/base64url" },
    "ciphertext_sha256": { "$ref": "#/$defs/sha256_hex" }
  },
  "$defs": {
    "sha256_hex": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
    "base64url": { "type": "string", "pattern": "^[A-Za-z0-9_-]+$" },
    "kid": { "type": "string", "pattern": "^kid_[A-Za-z0-9_-]{8,}$" }
  }
}

{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "urn:coherencelattice:schema:sophia_audit:v1",
  "title": "Sophia Audit Report v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema", "run_id", "decision", "findings", "repairs"],
  "properties": {
    "schema": { "type": "string", "const": "sophia_audit_v1" },
    "run_id": { "type": "string" },
    "decision": { "type": "string", "enum": ["pass", "warn", "fail"] },
    "summary": { "type": "string" },
    "metrics_snapshot": {
      "type": "object",
      "additionalProperties": true
    },
    "trend_summary": {
      "type": "object",
      "additionalProperties": true
    },
    "findings": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "severity", "type", "message"],
        "properties": {
          "id": { "type": "string" },
          "severity": { "type": "string", "enum": ["info", "warn", "fail"] },
          "type": {
            "type": "string",
            "enum": [
              "missing_evidence",
              "missing_counterevidence",
              "confidence_miscalibration",
              "telemetry_regression_risk",
              "schema_gap",
              "event_stream_gap",
              "artifact_receipt_gap"
            ]
          },
          "message": { "type": "string" },
          "data": { "type": ["object", "null"] }
        }
      }
    },
    "repairs": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "priority", "action"],
        "properties": {
          "id": { "type": "string" },
          "priority": { "type": "string", "enum": ["low", "medium", "high"] },
          "action": { "type": "string" },
          "details": { "type": ["object", "null"] }
        }
      }
    }
  }
}

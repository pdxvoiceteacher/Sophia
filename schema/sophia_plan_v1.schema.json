{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "urn:coherencelattice:schema:sophia_plan:v1",
  "title": "Sophia Plan v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema",
    "run_id",
    "decision",
    "risk_score",
    "top_risks",
    "recommended_actions",
    "next_experiments"
  ],
  "properties": {
    "schema": { "type": "string", "const": "sophia_plan_v1" },
    "run_id": { "type": "string" },
    "stakeholder_scope": { "type": "string" },
    "mvss_policy_ref": { "type": "string" },
    "registry_federation": {
      "type": "object",
      "additionalProperties": false,
      "required": ["enabled", "peers"],
      "properties": {
        "enabled": { "type": "boolean", "default": false },
        "peers": {
          "type": "array",
          "items": { "type": "string" },
          "default": []
        }
      }
    },
    "decision": { "type": "string", "enum": ["pass", "warn", "fail"] },
    "risk_score": { "type": "integer", "minimum": 0, "maximum": 100 },
    "top_risks": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "type", "severity", "summary"],
        "properties": {
          "id": { "type": "string" },
          "type": { "type": "string" },
          "severity": { "type": "string", "enum": ["info", "warn", "fail"] },
          "summary": { "type": "string" }
        }
      }
    },
    "recommended_actions": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["action", "target", "priority", "proof"],
        "properties": {
          "action": { "type": "string" },
          "target": { "type": "string" },
          "priority": { "type": "string", "enum": ["low", "medium", "high"] },
          "proof": {
            "type": "object",
            "additionalProperties": true
          }
        }
      }
    },
    "next_experiments": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "why", "expected_signal"],
        "properties": {
          "id": { "type": "string" },
          "why": { "type": "string" },
          "expected_signal": { "type": "string" }
        }
      }
    }
  }
}

{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "urn:coherencelattice:schema:change_proposal:v1",
  "title": "CoherenceLattice Change Proposal",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_id","version","created_at","basis","decision","changes"],
  "properties": {
    "schema_id": { "type": "string" },
    "version": { "type": "integer", "minimum": 1 },
    "created_at": { "type": "string", "format": "date-time" },

    "basis": {
      "type": "object",
      "additionalProperties": false,
      "required": ["run_dir","git_commit","telemetry_sha256","state_sha256","decision_sha256"],
      "properties": {
        "run_dir": { "type": "string" },
        "git_commit": { "type": "string" },
        "telemetry_sha256": { "type": "string" },
        "state_sha256": { "type": "string" },
        "decision_sha256": { "type": "string" }
      }
    },

    "decision": {
      "type": "object",
      "additionalProperties": true
    },

    "changes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id","action","priority","why"],
        "properties": {
          "id": { "type": "string" },
          "action": { "type": "string" },
          "priority": { "type": "string", "enum": ["low","medium","high"] },
          "why": { "type": "string" },
          "targets": { "type": "array", "items": { "type": "string" } },
          "diff_hint": { "type": "string" },
          "risk_ids": { "type": "array", "items": { "type": "string" } },
          "expected_effects": { "type": "object", "additionalProperties": true }
        }
      }
    },

    "notes": { "type": "string" }
  }
}
